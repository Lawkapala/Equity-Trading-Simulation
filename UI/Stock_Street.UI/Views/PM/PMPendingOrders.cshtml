<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="shortcut icon" href="images/favicon.png">

    <title>Open Blocks</title>

    <!--Core CSS -->
    <link href="~/Content/side-bar/bs3/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/side-bar/css/bootstrap-reset.css" rel="stylesheet">
    <link href="~/Content/side-bar/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!--dynamic table-->
    <link href="~/Content/side-bar/js/advanced-datatable/css/demo_page.css" rel="stylesheet" />
    <link href="~/Content/side-bar/js/advanced-datatable/css/demo_table.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/side-bar/js/data-tables/DT_bootstrap.css" />
    @Html.Partial("~/Views/Shared/TitleLogo.cshtml")

    <!-- Custom styles for this template -->
    <link href="~/Content/side-bar/css/style.css" rel="stylesheet">
    <link href="~/Content/side-bar/css/style-responsive.css" rel="stylesheet" />

    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]>
    <script src="js/ie8-responsive-file-warning.js"></script><![endif]-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  
</head>

<body ng-app="RootApp">

    <section id="container">
        <!--header start-->
        <div id="login-container">@Html.Partial("~/Views/Shared/PMPartial.cshtml")</div>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <div id="pm-content" ng-app="UiApp">
                <!--Write ng app here-->
                <section class="wrapper">
                    <!-- page start-->

                    <div class="row" style="z-index:0">
                        <div class="col-sm-12" ng-controller="PendingController">
                            <section class="panel">
                                <header class="panel-heading">
                                    Open Blocks
                                </header>
                                <div class="panel-body" style="background-color:#f1f2f7">
                                    <div class="adv-table">
                                        <table class="display table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Symbol</th>
                                                    <th>Side</th>
                                                    <th>Order Type</th>
                                                    <th>Order Qualifier</th>
                                                    <th>UserName</th>
                                                    <th>Portfolio ID</th>
                                                    <th>Price</th>
                                                    <th>Stop Price</th>
                                                    <th>Total Quantity</th>
                                                    <th>Open Quantity</th>
                                                    <th>Executed Quantity</th>
                                                    <th>Created TimeStamp</th>
                                                    <th>Order Status</th>
                                                    <th>Edit</th>
                                                    <th>Select</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="" ng-repeat="pending in PendingOrders">
                                                    <td>{{pending.orderId}}</td>
                                                    <td>{{pending.symbol}}</td>
                                                    <td>{{pending.side}}</td>
                                                    <td>{{pending.orderType}}</td>
                                                    <td>{{pending.orderQualifier}}</td>
                                                    <td>{{pending.userName}}</td>
                                                    <td>{{pending.portfolioId}}</td>
                                                    <td>{{pending.price}}</td>
                                                    <td>{{pending.stopPrice}}</td>
                                                    <td>{{pending.totalQuantity}}</td>
                                                    <td>{{pending.openQuantity}}</td>
                                                    <td>{{pending.executedQuantity}}</td>
                                                    <td>{{pending.createTStamp}}</td>
                                                    <td>{{pending.orderStatus}}</td>
                                                    <td>

                                                        <a ng-controller="GetTokenController" ng-init="url='http://localhost:35986/PM/PMEditPendingOrders/'" ng-href="{{url}}{{token}}/{{pending.orderId}}" class="btn-primary btn-xs" ng-if="pending.orderStatus != amend ">Edit</a>
                                                        <a ng-controller="GetTokenController" ng-init="url='http://localhost:35986/PM/PMAmendPendingOrders/'" ng-href="{{url}}{{token}}/{{pending.orderId}}" class="btn-primary btn-xs" ng-if="pending.orderStatus == amend ">Amend</a>
                                                    </td>
                                                    <td><input ng-model="pending.selected" type="checkbox" name="select" value="{{pending.orderId}}" /></td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="btn-group" style="float:right ">
                                    <button id="editable-sample_new" class="btn btn-primary" ng-click="save()">
                                        Send to trader <i class="fa fa-check"></i>
                                    </button>
                                </div>

                                <div class="btn-group" style="float:right ;  margin-right:20px">
                                    <button id="editable-sample_new" class="btn btn-primary" ng-click="del()">
                                        Delete <i class="fa fa-times"></i>
                                    </button>
                                </div>


                            </section>

                        </div>
                    </div>
                    <!-- page end-->
                </section>
                </div>
</section>
        <!--main content end-->

    </section>

    <!-- Placed js at the end of the document so the pages load faster -->
    <!--Core js-->
    <script src="~/Content/side-bar/js/jquery.js"></script>
    <script src="~/Content/side-bar/bs3/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Content/side-bar/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/side-bar/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/side-bar/js/jQuery-slimScroll-1.3.0/jquery.slimscroll.js"></script>
    <script src="~/Content/side-bar/js/jquery.nicescroll.js"></script>
    <!--Easy Pie Chart-->
    <script src="~/Content/side-bar/js/easypiechart/jquery.easypiechart.js"></script>
    <!--Sparkline Chart-->
    <script src="~/Content/side-bar/js/sparkline/jquery.sparkline.js"></script>

    <!--dynamic table-->
    <script type="text/javascript" language="javascript" src="~/Content/side-bar/js/advanced-datatable/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Content/side-bar/js/data-tables/DT_bootstrap.js"></script>
    <!--common script init for all pages-->
    <script src="~/Content/side-bar/js/scripts.js"></script>

    <!--dynamic table initialization -->



</body>
</html>
