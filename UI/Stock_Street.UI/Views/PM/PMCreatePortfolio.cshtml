
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="shortcut icon" href="~/Content/side-bar/images/favicon.png">
    <title>Create Portfolio</title>
    <!--Core CSS -->
    <link href="~/Content/side-bar/bs3/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/side-bar/css/bootstrap-reset.css" rel="stylesheet">
    <link href="~/Content/side-bar/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/side-bar/css/style.css" rel="stylesheet">
    <link href="~/Content/side-bar/css/style-responsive.css" rel="stylesheet" />

    <!--Angular mine-->
    @*<script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>
    <script src="~/AngularScripts/PM/App.js"></script>
    <script src="~/AngularScripts/PM/Service.js"></script>*@
        @Html.Partial("~/Views/Shared/TitleLogo.cshtml")
</head>
<body ng-app="RootApp">
    <section id="container">
        <!--header start-->
        <div id="login-container">@Html.Partial("~/Views/Shared/PMPartial.cshtml")</div>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <div id="pm-content" ng-app="UiApp">            <!--Write ng app here-->
                <section class="wrapper">
                    <!-- page start-->
                    <div class="row" style="z-index:0">
                        <div class="col-lg-12">
                            <section class="panel">
                                <header class="panel-heading">
                                    Create Portfolio
                                    <span class="tools pull-right">
                                    </span>
                                </header>
                                <div class="panel-body">
                                    <div class="form" ng-controller="CreatePortfolioController">
                                        <form class="cmxform form-horizontal " id="signupForm" method="post" ng-submit="create(data)" action="">
                                            <div class="form-group ">
                                                <label for="portfolioname" class="control-label col-lg-3">Portfolio Name</label>
                                                <div class="col-lg-6">
                                                    <input class="form-control" ng-model="data.portfolioName" name="portfolioname" type="text" required />
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="portfoliotype" class="control-label col-lg-3">Portfolio Type</label>
                                                <div class="col-lg-6">
                                                    <input class="form-control" ng-model="data.type" name="portfoliotype" type="text" required />
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="portfoliodesc" class="control-label col-lg-3">Portfolio Description</label>
                                                <div class="col-lg-6">
                                                    <textarea class="form-control " ng-model="data.description" name="portfoliodesc" rows="3"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-3 col-lg-6">
                                                    <button class="btn btn-primary" type="submit">Save <i class="fa fa-check"></i></button><!--Write Save code-->
                                                    <button class="btn btn-primary" type="reset">Cancel <i class="fa fa-times"></i></button><!--Write clear text box code-->
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                    <!-- page end-->
                </section>
            </div>
</section>
        <!--main content end-->

    </section>
    <!-- Placed js at the end of the document so the pages load faster -->
    <!--Core js-->
    <script src="~/Content/side-bar/js/jquery.js"></script>
    <script src="~/Content/side-bar/bs3/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Content/side-bar/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/side-bar/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/side-bar/js/jQuery-slimScroll-1.3.0/jquery.slimscroll.js"></script>
    <script src="~/Content/side-bar/js/jquery.nicescroll.js"></script>

    <!--common script init for all pages-->
    <script src="~/Content/side-bar/js/scripts.js"></script>
</body>
</html>

