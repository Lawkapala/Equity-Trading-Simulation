<div id="App3" ng-app="LoginApp">
    <!--header start-->
    <header class="header fixed-top clearfix" style="background-color:#1fb5ad;">
        <!--logo start-->
        <div class="brand" style="background-color:#1fb5ad;">
            <a href="http://localhost:35986" class="logo">
                <img src="~/Content/side-bar/images/logoSS.png" height="50" width="150" alt="" />
            </a>
        </div>
        <!--logo end-->
        <div class="nav notify-row" id="top_menu">
            <!--  notification start -->
            <ul class="nav top-menu"></ul>
            <!--  notification end -->
        </div>
        <div class="top-nav clearfix">
            <!--search & user info start-->
            <ul class="nav pull-right top-menu">
                <li>
                    <input type="text" class="form-control search" placeholder="Search">
                </li>
                <!-- user login dropdown start-->
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <img alt="" src="~/Content/side-bar/images/avatar1_small.jpg">
                        <span class="username" ng-controller="SetUserController">{{usr.DispName}}</span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu extended logout">
                        <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/Index/FeedBack/'" ng-href="{{url}}{{token}}"><i class="fa fa-suitcase"></i>FeedBack</a></li>
                        <li ng-controller="SetUserController" ng-show="val"><a ng-controller="SwitchRoleController" href="" ng-click="SwitchRole()"><i class="fa  fa-refresh"></i> Switch Role</a></li>
                        <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/Index/ChangePassword/'" ng-href="{{url}}{{token}}"><i class="fa fa-cog"></i> Change Password</a></li>
                        <li ng-controller="LogoutController"><a href="" ng-click="SignOut()"><i class="fa fa-key"></i> Log Out</a></li>
                    </ul>
                </li>
                <!-- user login dropdown end -->
            </ul>
            <!--search & user info end-->
        </div>
    </header>
    <!--header end-->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse"   style="z-index:1">
            <!-- sidebar menu start-->
            <div class="leftside-navigation">
                <ul class="sidebar-menu" id="nav-accordion">

                    <li ng-controller="GetTokenController">
                        <a ng-init="url= 'http://localhost:35986/PM/PMIndex/'" ng-href="{{url}}{{token}}/">
                            <i class="fa fa-home"></i>
                            <span>PM Home</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-th-large"></i>
                            <span>Portfolio</span>
                        </a>
                        <ul class="sub">
                            <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/PM/PMCreatePortfolio/'" ng-href="{{url}}{{token}}">Create New</a></li>
                            <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/PM/PMPortfolios/'" ng-href="{{url}}{{token}}">My Portfolios</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-book"></i>
                            <span>Orders</span>
                        </a>
                        <ul class="sub">
                            <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/PM/PMCreateOrder/'" ng-href="{{url}}{{token}}">Create New</a></li>
                            <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/PM/PMPendingOrders/'" ng-href="{{url}}{{token}}">Pending Orders</a></li>
                            <li ng-controller="GetTokenController"><a ng-init="url= 'http://localhost:35986/PM/PMExecutedOrders/'" ng-href="{{url}}{{token}}">Executed Orders</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->
</div>

