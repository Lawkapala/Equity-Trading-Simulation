<!DOCTYPE html>
<html>
<head>
    <title>SignUp</title>
    <link href="/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Content/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto:500,900italic,900,400italic,100,700italic,300,700,500italic,100italic,300italic,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
    <!-- js -->

    <script src="/Content/js/jquery.min.js"></script>
    @Html.Partial("~/Views/Shared/TitleLogo.cshtml")

    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="/Content/js/move-top.js"></script>
    <script type="text/javascript" src="/Content/js/easing.js"></script>
    <script type="text/javascript">
	jQuery(document).ready(function($) {
		$(".scroll").click(function(event){
			event.preventDefault();
			$('html,body').animate({scrollTop:$(this.hash).offset().top},1000);
		});
	});
    </script>
    <!-- start-smoth-scrolling -->
    <!--animated-css-->
    <link href="/Content/css/animate.css" rel="stylesheet" type="text/css" media="all">
    <script src="/Content/js/wow.min.js"></script>
    <script>
 new WOW().init();
    </script>
    <!--/animated-css-->
</head>

<body ng-app="RootApp">
    <div class="header-nav">
        <div class="container">
            <div class="logo wow fadeInLeft" data-wow-delay="0.5s">
                <a href="http://localhost:35986">
                    <img src="/Content/images/logoSS.png" height="50" width="150" alt="" />
                </a>
            </div>
            <div class="logo-right">
                <span class="menu"><img src="/Content/images/menu.png" alt="" /></span>
                <ul class="nav1">
                    <li><a href="http://localhost:35986">Home</a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
            <!-- script for menu -->
            <script>

                $("span.menu").click(function () {
                    $("ul.nav1").slideToggle(300, function () {
                        // Animation complete.
                    });
                });
            </script>
            <!-- //script for menu -->
        </div>
    </div>
    <div class="sign-up-form wow fadeInUp" data-wow-delay="0.5s">
        <div class="container">
            <h3>REGISTER HERE</h3>
            <p>
                Trading made easier here.
            </p>
            <form method="post" ng-app="LoginApp" ng-controller="SignUpController">
                <div class="sign-up">
                    <h5>PERSONAL INFORMATION</h5>
                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>Name* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="text" ng-model="user.displayName" required />

                        </div>
                        <div class="clearfix"> </div>
                    </div>

                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>Email Address* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="email" ng-model="user.email" required />

                        </div>
                        <div class="clearfix"> </div>
                    </div>

                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>Mobile Number* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="text" ng-model="user.phone" required />

                        </div>
                        <div class="clearfix"> </div>
                    </div>

                    <!----<div class="sign-u">
                        <div class="sign-up1">
                            <h4>Date Of Birth* :</h4>
                        </div>
                        <br />
                        <div class="sign-up2">

                            <input type="date" ng-model="user.dob" required />

                        </div>
                    </div> -->

                    <div class="sign-u" style="align-items:inherit">
                        <div class="sign-up1">
                            <h4>&nbsp; Role:</h4>
                        </div>

                        <div class="sign-up2">
                            <br />
                            <div>
                                <input tabindex="3" type="radio" ng-model="user.role" value="PM" dat-ng-value="true" name="role">
                                <label>Portfolio Manager</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                                <input tabindex="3" type="radio" ng-model="user.role" value="ET" name="role">
                                <label>Trader</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                                <input tabindex="3" type="radio" ng-model="user.role" value="PMT" name="role">
                                <label>Both</label>
                            </div>
                        </div>

                        <div class="clearfix"> </div>
                    </div>

                    <h6>LOGIN INFORMATION</h6>

                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>User Name* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="text" ng-model="user.userName" required  ng-change="reset()" />
                            <div style="margin-left:20px;color:red;font-size:medium;" ng-show="errorContent">{{errorMsg}} </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>Password* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="password" ng-model="user.password" required ng-change="reset()"/>

                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>Confirm Password* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="password" ng-model="user.cPassword" required ng-change="reset()" />
                            <div style="margin-left:80px;color:red;font-size:medium;" ng-show="errorContentP">{{errorMsgP}} </div>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                    <h6>SECURITY QUESTION</h6>

                    <div class="sign-u">
                        <div class="sign-up1">
                            <h4>Your mother's mainden name* :</h4>
                        </div>
                        <div class="sign-up2">

                            <input type="text" ng-model="user.securityAnswer" required />

                        </div>
                        <div class="clearfix"> </div>
                    </div>


                    <input type="submit" value="REGISTER" ng-click="SignUp(user)">

                </div>
            </form>
        </div>
    </div>

    <br><br>
    <!-- footer -->
    <div class="footer">
        <div class="container">
            <p><small>&copy; Copyright 2017, Sapient Corporation</small></p>
            <p>Design by<a href="https://www.sapientglobalmarkets.com"> GMI 2017 Batch</a></p>
        </div>
    </div>
    <!-- //footer -->
    <!-- here stars scrolling icon -->
    <script type="text/javascript">
        $(document).ready(function () {
            /*
            var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
            };
            */

            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>


</body>
</html>
